{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "MongoDbConfiguration": {
        "ConnectionString": "some_connection_string",
        "DatabaseName": "some_database"
    },
    "ImagesConfiguration": {
        "AllowedMediaTypes": [
            "image/png",
            "image/jpeg",
            "image/bmp",
            "image/tiff"
        ],
        "MaxFileSize": 5242880,
        "DirectoryFilePath": "images"
    },
    "GendersConfiguration": {
        "MaxFileSize": 5242880,
        "DirectoryFilePath": "genders"
    },
    "FirebaseStorage": {
        "StorageBucket": "some_storage"
    }
}
